class Solution {
public:
    int candy(vector<int>& ratings) {

        int n=ratings.size();

        // everyone should get atleast one chocolate
        vector<int> left(n,1) , right(n,1);

        left[0] = 1;
        right[n-1] =1; 
        
        for(int i=1;i<n;i++){

            if(ratings[i]>ratings[i-1]) 
               left[i] = left[i-1]+1;      
        }

        for(int i=n-2;i>=0;i--){

            if(ratings[i]>ratings[i+1])
               right[i] = right[i+1]+1;

        }

        int c=0;
        for(int i=0;i<n;i++){
             c+=max(left[i],right[i]);
        }


        return c;
        
       
        
    }
};

// [0,1,2]
// [1,2,3]

// sorted should be - should give choclates, but order also matters


// [1,0,2]
// [1,2,3]

// so 0th child can get should get 1 choclate YES 


