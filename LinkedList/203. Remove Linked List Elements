class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {

        ListNode* newHead = new ListNode(-1);
        newHead->next=head;

        ListNode* temp=newHead,*prev=newHead;
        while(temp!=NULL){

           if(temp->val==val){
            prev->next=temp->next;
           }

           else
           prev=temp;

           temp=temp->next;

        }

        return newHead->next;
    }
};
