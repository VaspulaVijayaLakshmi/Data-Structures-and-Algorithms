/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    bool hasCycle(ListNode *head) {

        if(head==NULL || head->next==NULL)
         return false; 
         

        ListNode* fst=head,*slw=head;

        while((fst!=NULL && fst->next!=NULL)){
            fst=fst->next->next;
            slw=slw->next;

            if(slw==fst) return true;
        }
        return false;
        
    }
};
