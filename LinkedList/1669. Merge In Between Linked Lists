class Solution {
public:
    ListNode* mergeInBetween(ListNode* list1, int a, int b, ListNode* list2) {

      ListNode* temp=list1;
      int i=1;
      while(temp!=NULL && i<a){
         temp=temp->next;
         i++;
      }

      ListNode* strt=temp;

      while(temp!=NULL && i<=b){
        temp=temp->next;
        i++;
      }

      ListNode* end=temp->next;

      strt->next = list2;
      temp=list2;
      while(temp->next!=NULL){
        temp=temp->next;
      }

      temp->next=end;

      
      return list1;
    }
};
